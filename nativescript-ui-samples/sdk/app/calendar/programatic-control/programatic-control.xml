<navigation:ExamplePage xmlns:navigation="navigation/example-page" xmlns:rc="nativescript-telerik-ui-pro/calendar" loaded="onPageLoaded" xmlns="http://www.nativescript.org/tns.xsd">
    <navigation.actionBar>
        <ActionBar title="Programatic control" />
    </navigation.actionBar>
	<rc:RadCalendar id="calendar"  />
	<GridLayout orientation="vertical" rows="*, auto">
        <rc:RadCalendar id="calendar" row="0" />
		<StackLayout row="1">
			<Button text="Next month" tap="onNavigateForwardTap" />
			<Button text="Prev month" tap="onNavigateBackTap"/>
			<Button text="Today" tap="onGoToDateTap"/>
    	</StackLayout>
    </GridLayout>
</navigation:ExamplePage>