
<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:gr="nativescript-gradient" navigatingTo="navigatingTo" class="page">

    <gr:Gradient direction="to bottom left" colors="yellow, red, yellow, red, yellow, red, yellow">

            <Label text="Tap the button" class="h1 text-center"/>
            <Button text="TAP" tap="{{ onTap }}" class="btn btn-primary btn-active"/>
            <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>

    </gr:Gradient>
</Page>
