<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" xmlns:lv="nativescript-telerik-ui/listview">
   <GridLayout>
      <ListView items="{{ listItems }}" id="list" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout>
                    <Image src="http://www.imagen.com.mx/assets/img/imagen_share.png" height="100" width="100"/>
                    <Label text="{{ title }}" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
   </GridLayout>
</Page>