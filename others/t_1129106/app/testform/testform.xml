<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar>
      <ActionBar.titleView>
        <NavigationButton android.systemIcon="ic_menu_back" tap="{{onBack}}"></NavigationButton>
        <StackLayout >
          <Label text="Form"/>
        </StackLayout>
      </ActionBar.titleView>
    </ActionBar>
  </Page.actionBar>
  
  <StackLayout class="formLayout">
    <Button text="Read/Write Binary" tap="{{readWriteBinaryTap}}"/>
    <Image src="{{image}}" style="margin:40" />
  </StackLayout>
</Page>