          </ns:CarouselItem>
          <ns:CarouselItem id="slide6">
            <Image src="~/images/tutorial/screens-6.jpg" />
          </ns:CarouselItem>
          <ns:CarouselItem id="slide7">
            <Image src="~/images/tutorial/screens-7.jpg" />
          </ns:CarouselItem>
          <ns:CarouselItem id="slide8">
            <Image src="~/images/tutorial/screens-8.jpg" />
          </ns:CarouselItem>
        </ns:Carousel>
      </GridLayout>
      <StackLayout horizontalAlignment="right" width="100%" orientation="horizontal" tap="skipTutorial" padding="10 5">
        <Label text="X CLOSE" color="#9e0425" horizontalAlignment="right"  tap="skipTutorial" fontWeight="bold"/>
      </StackLayout>

    </AbsoluteLayout>
  </android>
