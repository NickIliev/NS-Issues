<Page loaded="loaded"
      actionBarHidden = "true"
      codeFile="~/views/tutorial/tutorial.js"
      xmlns:ns="nativescript-carousel">
  <android>
    <AbsoluteLayout width="100%" height="100%">
      <GridLayout orientation="vertical" width="100%" height="100%">
        <ns:Carousel row="0" pageChanged="myChangeEvent" showIndicator="true" indicatorColor="#9e0425" indicatorColorUnselected="#cccccc">
          <ns:CarouselItem id="slide1">
            <Image src="~/images/tutorial/screens-1.jpg" />
          </ns:CarouselItem>
          <ns:CarouselItem id="slide2">
            <Image src="~/images/tutorial/screens-2.jpg" />
          </ns:CarouselItem>
