<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:RL="nativescript-ripple"
      loaded="loaded"
      unloaded="onUnloaded"
      cssFile="~/components/update-required/update-required.css"
      codeFile="~/components/update-required/update-required.js"
      actionBarHidden="true" >
  <AbsoluteLayout width="100%" height="100%" backgroundColor="black">
    <Image src="~/images/homescreen.jpg" width="100%" height="auto" opacity=".3"/>
    <StackLayout id="update" style="text-align:center" verticalAlignment="middle" horizontalAlignment="center">

      <StackLayout id="updateMessage">
        <Label id="lblTitle" text="Update Required" textWrap="true" width="100%" textAlign="center"/>
        <Label id="lblMessage" text="{{ message }}" textWrap="true" width="100%" textAlign="center"/>
        <Image id="appStoreImage" src="" width="40%" height="auto" tap="getCurrentVersion"/>
      </StackLayout>
      

    </StackLayout>
  </AbsoluteLayout>
</Page>