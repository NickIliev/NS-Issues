<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">

    <GridLayout rows="2*, *" pan="onPan" pinch="onPinch" doubleTap="onDoubleTap">
        <Image row="0" src="res://icon" stretch="aspectFit" id="item" width="300" height="400" backgroundColor="Green"/>
        <1TextView row="1" id="status" editable="false"/>
    </GridLayout>

</Page>
