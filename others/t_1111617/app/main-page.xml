<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoaded" xmlns:lv="nativescript-telerik-ui-pro/listview" class="page">
    <GridLayout orientation="vertical" rows="auto, *, auto" >
        <lv:RadListView id="listView" items="{{ dataItems }}" row="1" itemLoading="onItemLoading" selectionBehavior="Press" itemSelected="onItemSelected" itemDeselected="onItemDeselected">
            <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <StackLayout orientation="vertical" paddingLeft="16">
                    <Label fontSize="20" text="{{ itemName }}"/>
                    <Label fontSize="13" text="{{ itemEmail }}"/>
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
        <Label id="txtSelection" textWrap="true" row="2"/>
    </GridLayout>
</Page>
